{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"command": "npm start",
			"name": "webserver",
			"request": "launch",
			"type": "node-terminal"
		},
		{
			"name": "chrome",
			"request": "launch",
			"type": "chrome",
			"url": "http://localhost:8080",
			"webRoot": "${workspaceFolder}"
		},
		{
			"type": "firefox",
			"request": "launch",
			"name": "firefox",
			"url": "http://localhost:8080",
			"webRoot": "${workspaceFolder}"
		}
	],
	"compounds": [
		{
			"name": "Firefox Launch",
			"configurations": ["webserver", "firefox"],
			"preLaunchTask": "",
			"stopAll": true
		},
		{
			"name": "Chrome Launch",
			"configurations": ["webserver", "chrome"],
			"preLaunchTask": "",
			"stopAll": true
		}
	]
}